<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-lg-9 offset-sm-3">
    <h1>Cities</h1>
    <%= form_tag import_cities_path, multipart: true  do %>
      <%= file_field_tag :file %>
      <%= submit_tag 'import csv' %>
    <% end %>
    <table>
      <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @cities.each do |city| %>
        <tr>
          <td><%= city.state.name %></td>
          <td><%= city.name %></td>
          <td><%= link_to 'Show', city %></td>
          <td><%= link_to 'Edit', edit_city_path(city) %></td>
          <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


<br>

<%= link_to 'New City', new_city_path %>
