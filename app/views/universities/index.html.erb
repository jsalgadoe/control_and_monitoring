<div class="row">
  <div class="col-md-10 offset-md-1  text-center">
    <h2 class="my-4">Universidades</h2>
  </div>
  <div class="offset-md-1"></div>
</div>

<div class="row">
  <div class="offset-sm-1 col-sm-10">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col" class="text-center">#</th>
          <th scope="col" class="text-center">Convenio</th>
          <th scope="col" class="text-center">Nombre</th>
          <th scope="col" class="text-center">Telefono</th>
          <th scope="col" class="text-center">Contacto </th>
          <th colspan="2"></th>
        </tr>
        </thead>

        <tbody>
        <% @universities.each_with_index  do |university, index| %>
          <tr>
            <td> <%= index + 1  %></td>
            <td class="text-center"><%= university.agreement %> </td>
            <td class="text-center"><%= university.name %></td>
            <td class="text-center"><%= university.contact %></td>
            <td class="text-center"><%= university.contact_phone %></td>
            <td></td>
            <td>
              <%= link_to 'Mostrar', university_path(university) %>
            </td>
              <td><%= link_to 'Editar', edit_university_path(university) %></td>
              <td>
                <%= link_to 'Eliminar', university, method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminarlo?' } %>
              </td>
              </tr>

        <% end %>
        </tbody>
      </table>

      <br>
    </div>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-sm-12 d-flex justify-content-center">
    <%= link_to 'Nueva universidad', new_university_path , class: "btn btn-primary mr-2" %>
  </div>



</div>