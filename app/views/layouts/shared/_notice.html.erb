<div class="row">
  <div class="col-lg-10 offset-lg-2 d-flex justify-content-center">
    <% if notice %>
      <div class="alert bg-alert-success alert-dismissible fade show mt-4" role="alert" style="width: 350px">
        <p id="notice" class="mb-0"><%= notice %></p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
  </div>
</div>