<%= render 'layouts/shared/notice' %>

<div class="row">
  <div class="col-md-10 offset-md-2  text-center">
    <h2 class="my-4">Designacion de roles, actividades y responsables</h2>
  </div>
</div>

<div class="row">
  <div class="offset-sm-3 col-sm-9">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col">Codigo</th>
          <th scope="col">Actividad</th>
          <th scope="col">Areas de Rol</th>
          <th colspan="2"></th>
        </tr>
        </thead>

        <tbody>
        <% @designations.each_with_index  do |designation| %>

          <tr>
            <td><%= designation.code %></td>
            <td><%= designation.activity %> </td>
            <td><%= designation.area.name %></td>
            <td>


            </td>
            <td><%= link_to 'Editar', edit_designation_path(designation) %></td>

            <td><%#= link_to 'Eliminar', designation, method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminarlo?' } %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <br>
    </div>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-lg-10 offset-2 d-flex justify-content-center">
    <%= link_to 'Nuevo Designacion', new_designation_path , class: "btn btn-primary mr-2" %>
  </div>



</div>