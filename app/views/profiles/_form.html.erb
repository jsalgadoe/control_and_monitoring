<div class="row">
  <div class="offset-sm-2 col-sm-8">
    <div class="card card-margin">

      <div class="card-header">
        <h5 class="card-title">
          Datos
        </h5>
      </div>

      <%= bootstrap_form_with(model: profile, local: true, html: { class: "forms-sample needs-validation", novalidate: true} ) do |form| %>
        <div class="card-body">
          <% if profile.errors.any? %>
            <div id="error_explanation" style="display: none">
              <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

              <ul>
                <% profile.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <%= form.select(:profile_type, options_for_select(@profile_type, profile.profile_type),{label: t('profile.profile_type') , :prompt => 'Selecciona un tipo',class: "form-control" ,required: true})%>
          </div>

          <div class="form-group">
            <%= form.text_field :name,label: t('profile.name') ,class: "form-control" , required: true %>
          </div>

          <% if @profile.id? %>
            <div class="form-group">
             <label class="switch">
               <input type="checkbox" name="enable" id="enable" value="true" <%= @profile.enable ? "checked='checked'":""%> >
               <span class="slider round"></span>
             </label>
            </div>
          <% end %>




        </div>

        <div class="card-footer bg-white">
          <button type="submit" class="btn btn-primary mr-2 btn-action">Guardar</button>
          <%= link_to 'Regresar', profiles_path ,class: "btn btn-light btn-action"  %>

          <% if @delete_ok == nil %>
            <%= link_to 'Eliminar', profile, method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminarlo?' } %>
          <% end %>

        </div>
      <% end %>

    </div>
  </div>
</div>










