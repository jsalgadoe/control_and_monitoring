<div class="row ">
  <div class="offset-lg-1">
  </div>
  <div class="col-lg-10 d-flex justify-content-center">
    <div class="card card-margin" style="width: 30vw; margin-top: 40px" >

      <div class="card-header text-center">
        <h5 class="card-title">
         Iniciar sesion
        </h5>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-control') do |f| %>
          <div class="field">
            <%= f.label :email, "Correo electronico" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control mb-2" %>
          </div>

          <div class="field">
            <%= f.label :password, "ContraseÃ±a" %><br />
            <%= f.password_field :password, autocomplete: "current-password" , class: "form-control mb-2" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me   %>
              <%= f.label :remember_me, "Recuerdame" ,class: "mb-2" %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Iniciar Sesion" , class: "btn btn-block btn-primary"%>
          </div>
        <% end %>


      </div>
      <%#= render "devise/shared/links" %>
      </div>
    </div>







  <div class="offset-lg-1">
  </div>
  </div>





