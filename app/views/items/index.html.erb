<%= render 'layouts/shared/notice' %>


<div class="row">
  <div class="col-md-10 offset-md-2  text-center">
    <h2 class="my-4">Items especificos</h2>
  </div>
</div>

<div class="row">
  <div class="offset-sm-3 col-sm-9">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col">Nombres</th>
          <th scope="col">Estado</th>
          <th colspan="2"></th>
        </tr>
        </thead>

        <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.name %> </td>
            <td>
              <% if  item.enable %>
                Habilitado
              <% else %>
                Deshabilitado
              <% end %>

            </td>
            <td><%= link_to 'Editar', edit_item_path(item) %></td>

            <td>
              <%#if item.editable   %>
              <%= link_to 'Eliminar', item, method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminarlo?' } %></td>
            <%# end %>
          </tr>
        <% end %>
        </tbody>
      </table>

      <br>
    </div>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-lg-10 offset-2 d-flex justify-content-center">
    <%= link_to 'Nuevo item', new_item_path , class: "btn btn-primary mr-2" %>
  </div>



</div>