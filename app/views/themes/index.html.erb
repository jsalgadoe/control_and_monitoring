<%= render 'layouts/shared/notice' %>

<div class="row">
  <div class="col-md-10 offset-md-1  text-center">
    <h2 class="my-4">Asuntos</h2>
  </div>
</div>

<div class="row">
  <div class="offset-sm-1 col-sm-10">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nombres</th>
          <th scope="col">Estado</th>
          <th colspan="2"></th>
        </tr>
        </thead>

        <tbody>
        <% @themes.each_with_index  do |theme, index | %>

          <tr>
            <td> <%= index + 1  %></td>
            <td><%= theme.name %> </td>
            <td>
              <% if  theme.enable %>
                Habilitado
              <% else %>
                Deshabilitado
              <% end %>

            </td>
            <td><%= link_to 'Editar', edit_theme_path(theme) %></td>

            <td>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <br>
    </div>
  </div>
</div>
<div class="row   no-gutters justify-content-center">
  <div class="col-lg-10 offset-lg-1 d-flex justify-content-center">
    <%= link_to 'Nuevo Asunto', new_theme_path , class: "btn btn-primary mr-2" %>
  </div>



</div>