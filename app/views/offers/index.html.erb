<div class="row">
  <div class="col-md-10 offset-md-1  text-center">
    <h2 class="my-4">Seguimientos licitaciones</h2>
  </div>
  <div class="offset-md-1"></div>
</div>

<div class="row">
  <div class="offset-sm-1 col-sm-10">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col" class="text-center">#</th>
          <th scope="col" class="text-center">Concepto</th>
          <th scope="col" class="text-center">Asunto</th>
          <th scope="col" class="text-center">Estado</th>
          <th colspan="2"></th>
        </tr>
        </thead>

        <tbody>
        <% @offers.each do |offer| %>
          <tr>
            <td class="text-center"><%= offer.code %> </td>
            <td class="text-center"><%= offer.worker.first_name %></td>
            <td></td>
            <td>
              <%= link_to 'Mostrar', offer_path(offer) %>
            </td>
            <%# if (admin_control.user.email == current_user.email) || (current_user.role_id == User.ADMINISTRATOR) %>
            <td><%= link_to 'Editar', edit_offer_path(offer) %></td>
              <td>
                <%= link_to 'Eliminar', offer, method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminarlo?' } %>
              </td>
          </tr>
            <%# end %>
        <% end %>
        </tbody>
      </table>

      <br>
    </div>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-sm-10 offset-sm-1 d-flex justify-content-center">
    <%= link_to 'Nuevo Seguimiento Administrador', new_offer_path , class: "btn btn-primary mr-2" %>
  </div>



</div>