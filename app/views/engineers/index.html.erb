<%= render 'layouts/shared/notice' %>


<div class="row">
  <div class="col-md-10 offset-md-2  text-center">
    <h2 class="my-4">Ingenieros</h2>
  </div>
</div>

<div class="row">
  <div class="offset-sm-3 col-sm-9">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col">Nombres</th>
          <th scope="col">Estado</th>
          <th colspan="2"></th>
        </tr>
        </thead>

        <tbody>
        <% @engineers.each do |engineer| %>
          <tr>
            <td><%= engineer.name %> </td>
            <td>
              <% if  engineer.enable %>
                Habilitado
              <% else %>
                Deshabilitado
              <% end %>

            </td>
            <td>
              <%= link_to 'Mostrar', engineer_path(engineer) %>
            </td>
            <td><%= link_to 'Editar', edit_engineer_path(engineer) %></td>
            <td>
              <%# if profile.editable   %>
            <%= link_to 'Eliminar', engineer, method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminarlo?' } %></td>
              <%# end %>
              </tr>
        <% end %>
        </tbody>
      </table>

      <br>
    </div>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-lg-10 offset-2 d-flex justify-content-center">
    <%= link_to 'Nuevo Ingeniero', new_engineer_path , class: "btn btn-primary mr-2" %>
  </div>



</div>