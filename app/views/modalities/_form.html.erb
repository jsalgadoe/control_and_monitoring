  <div class="row">
    <div class="offset-sm-2 col-sm-8">
      <div class="card card-margin">

        <div class="card-header">
          <h5 class="card-title">
            Datos
          </h5>
        </div>

        <%= bootstrap_form_with(model: modality, local: true, html: { class: "forms-sample needs-validation", novalidate: true }) do |form| %>
          <div class="card-body">
            <% if modality.errors.any? %>
              <div id="error_explanation" style="display: none">
                <h2><%= pluralize(modality.errors.count, "error") %> prohibited this modality from being saved:</h2>

                <ul>
                  <% modality.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>


            <div class="form-group">
              <%= form.text_field :name, label: t('modality.name'),class: "form-control" , required: true %>
            </div>

            <div class="form group">
              <%= form.text_area :description ,label: t('modality.description') , class:"form-control", required:true %>
            </div>
          </div>


            <div class="col-lg-12 ">
              <div class="form-group text-center">
                <label for="enable">
                  Habilitar / Inhabilitar
                </label>
              </div>
            </div>
            <div class="col-lg-12 d-flex justify-content-center">
              <div class="form-group">
                <label class="switch">
                  <input type="checkbox" name="enable" id="enable" value="true" <%= @modality.enable ? "checked='checked'":""%> >
                  <span class="slider round"></span>
                </label>
              </div>
            </div>


          <div class="card-footer bg-white">
            <button type="submit" class="btn btn-primary mr-2 btn-action">Guardar</button>
            <%= link_to 'Regresar', modalities_path ,class: "btn btn-light btn-action"  %>
          </div>


      </div>
    </div>
  </div>
  <% end %>




