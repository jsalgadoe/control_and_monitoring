<div class="row">
  <div class="col-md-10 offset-md-1  text-center">
    <h2 class="my-4"><%= t('titles.titles') %></h2>
  </div>
</div>
<div class="row">
  <div class="offset-sm-1 col-sm-10">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nombres</th>
          <th scope="col">Estado</th>
          <th colspan="2"></th>
        </tr>
        </thead>

        <tbody>
        <% @titles.each_with_index  do |title, index | %>

          <tr>
            <td> <%= index + 1  %></td>
            <td><%= title.name %> </td>
            <td>
              <% if  title.enable %>
                Habilitado
              <% else %>
                Deshabilitado
              <% end %>

            </td>
            <td><%= link_to 'Editar', edit_title_path(title) %></td>

            <td>
              <%= link_to 'Eliminar', title, method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminarlo?' } %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <br>
    </div>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-lg-12 d-flex justify-content-center">
    <%= link_to "Nuevo #{t('titles.titles')}", new_title_path , class: "btn btn-primary mr-2" %>
  </div>



</div>