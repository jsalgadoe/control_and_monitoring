<%= render 'layouts/shared/notice' %>


<div class="row">
  <div class="col-md-10 offset-md-2  text-center">
    <h2 class="my-4">Seguimiento Administrador</h2>
  </div>
</div>

<div class="row">
  <div class="offset-sm-3 col-sm-9">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col" class="text-center">#</th>
          <th scope="col" class="text-center">Concepto</th>
          <th scope="col" class="text-center">Asunto</th>
          <th scope="col" class="text-center">Estado</th>
          <th colspan="2"></th>
        </tr>
        </thead>

        <tbody>
        <% @admin_controls.each do |admin_control| %>
          <tr>
            <td class="text-center"><%= admin_control.code %> </td>
            <td class="text-center"><%= admin_control.concept.name %></td>
            <td class="text-center"><%= admin_control.theme.name %></td>
            <td class="text-center">
              <% if  admin_control.enable %>
                Habilitado
              <% else %>
                Deshabilitado
              <% end %>

            </td>
            <td>
              <%= link_to 'Mostrar', admin_control_path(admin_control) %>
            </td>
            <td><%= link_to 'Editar', edit_admin_control_path(admin_control) %></td>
            <td>
              <%# if profile.editable   %>
              <%= link_to 'Eliminar', admin_control, method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminarlo?' } %></td>
            <%# end %>
          </tr>
        <% end %>
        </tbody>
      </table>

      <br>
    </div>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-lg-10 offset-2 d-flex justify-content-center">
    <%= link_to 'Nuevo Seguimiento Administrador', new_admin_control_path , class: "btn btn-primary mr-2" %>
  </div>



</div>